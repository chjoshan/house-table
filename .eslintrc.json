{
    "extends": "airbnb",
    "rules": {
        "import/prefer-default-export": 0,
        "import/imports-first": 0,
        "import/first": 0,
        "import/no-unresolved": [2, {"commonjs": true, "amd": true, "ignore": ["^@"] }],
        "comma-dangle": 0,
        "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 1, "ignoredNodes": ["JSXElement *"] }],
        "sort-imports": [1, {
            "ignoreCase": true,
            "ignoreMemberSort": true,
            "memberSyntaxSortOrder": [ "multiple", "all", "single", "none"]
        }],
        "no-underscore-dangle": [2, { "allow": ["_grid"] }],
        "react/jsx-indent": [2, 4],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/prefer-stateless-function": [1, { "ignorePureComponents": true }],
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        }
    },
    "settings" : {
        "import/resolver": {
            "webpack" : { "config": "webpack.config.js" }
        }
    },
    "env": {
        "browser": true
    }
}
